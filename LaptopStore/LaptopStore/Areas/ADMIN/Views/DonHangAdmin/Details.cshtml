@using LaptopStore.Models.Entities
@model LaptopStore.Models.Entities.DonHang
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}

    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Đơn hàng đã đặt
                    </header>
                    <div class="panel-body">
                        <section id="unseen">
                            <table class="table table-bordered table-striped table-condensed">
                                <thead>
                                    <tr>

                                        <th><i class="fa fa-bullhorn"></i> ID khách hàng</th>
                                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Ngày lập</th>
                                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Ngày nhận</th>
                                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Họ tên khách hàng </th>
                                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Địa chỉ giao hàng</th>
                                        <th><i class="fa fa-bookmark"></i> SĐT</th>
                                        <th><i class=" fa fa-edit"></i> Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><a href="#">@Model.KhachhangID </a></td>
                                        <td class="hidden-phone">@Model.Ngaylap</td>
                                        <td class="hidden-phone">@Model.Ngaynhanhang</td>
                                        <td class="hidden-phone">@Model.Hotenkhachhang</td>
                                        <td class="hidden-phone">@Model.Diachigiaohang</td>
                                        <td>@Model.Phone </td>
                                        <td>
                                            @if (Model.Trangthai == null)
                                            {
                                                <span class="label label-info label-mini">Đang chờ xử lí</span>
                                            }
                                            else if (Model.Trangthai == true)
                                            { <span class="label label-info label-mini">Đã duyệt</span>}
                                            else if (Model.Trangthai == false)
                                            { <span class="label label-info label-mini">Chưa duyệt</span>}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </section>
                    </div>
                </section>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Chi tiết đơn hàng
                    </header>
                    <div class="panel-body">
                        <section id="flip-scroll">
                            <table class="table table-bordered table-striped table-condensed cf">
                                <thead class="cf">
                                    <tr>
                                        <th >
                                            MÃ SẢN PHẨM
                                        </th>
                                        <th>
                                            TÊN SẢN PHẨM
                                        </th>
                                        <th>
                                            ẢNH SẢN PHẨM
                                        </th>
                                        <th>
                                            ĐƠN GIÁ
                                        </th>
                                        <th>
                                            SỐ LƯỢNG
                                        </th>
                                        <th>
                                            THÀNH TIỀN
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (CTDonHang item in (ViewBag.CTHD as IEnumerable<CTDonHang>))
                                    {
                                    <tr>
                                        <td>
                                            @item.SanphamID
                                        </td>
                                        <td>
                                            @item.SanPham.Tensanpham
                                        </td>
                                        <td>
                                            <img src="@Url.Content("~/Content/images/Products/"+item.SanPham.Imagelink)" width="90" height="90">
                                            @*<img class="img-responsive" src="~/Content/images/Products/@item.SanPham.Imagelink" alt="" />*@
                                        </td>
                                        <td>
                                            @item.SanPham.Giabandau
                                        </td>
                                        <td>
                                            @item.Soluong
                                        </td>
                                        <td>
                                            @(item.Soluong * item.SanPham.Giabandau)

                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </section>
                    </div>
                </section>
            </div>
        </div>
        
        <!-- page end-->
    </section>

