@*@model IEnumerable<Mars_Store.Models.Entities.DONHANG>*@
@using LaptopStore.Models.Entities
@model IEnumerable<DonHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}

<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Bảng đơn hàng
                </header>
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th><i class="fa fa-bullhorn"></i> ID khách hàng</th>
                            <th class="hidden-phone"><i class="fa fa-question-circle"></i> Ngày lập</th>
                            <th class="hidden-phone"><i class="fa fa-question-circle"></i> Ngày nhận</th>
                            <th class="hidden-phone"><i class="fa fa-question-circle"></i> Họ tên khách hàng </th>
                            <th class="hidden-phone"><i class="fa fa-question-circle"></i> Địa chỉ giao hàng</th>
                            <th><i class="fa fa-bookmark"></i> SĐT</th>
                            <th><i class=" fa fa-edit"></i> Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DonHang item in Model)
                        {
                        <tr>
                            <td><a href="#"> @item.KhachhangID</a></td>
                            <td class="hidden-phone">@item.Ngaylap</td>
                            <td class="hidden-phone">@item.Ngaynhanhang</td>
                            <td class="hidden-phone">@item.Hotenkhachhang</td>
                            <td class="hidden-phone">@item.Diachigiaohang</td>
                            <td>@item.Phone </td>
                            <td>
                                @if (item.Trangthai == null)
                                {                               
                                    <span class="label label-info label-mini">Đang chờ xử lí</span> 
                                }
                                else if (item.Trangthai == true)
                                { <span class="label label-info label-mini">Đã duyệt</span>}
                                else if (item.Trangthai == false)
                                { <span class="label label-info label-mini">Chưa duyệt</span>}
                            </td>
                            <td>
                                <button class="btn btn-success btn-xs" onclick="window.location.href='/ADMIN/DonHangAdmin/Details/@item.DonhangID'"><i class="fa fa-check"></i></button>
                                <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </section>
        </div>
    </div>
</section>
