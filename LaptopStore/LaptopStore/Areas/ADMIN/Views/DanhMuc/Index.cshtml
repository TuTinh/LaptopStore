
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}
@using LaptopStore.Models.Entities;
@model IEnumerable<DanhMuc>


<section class="wrapper site-min-height">
    <!-- page start-->
    <section class="panel">
        <header class="panel-heading">
            Bảng danh mục
        </header>
        <div class="panel-body">
            <div class="adv-table editable-table ">
                <div class="clearfix">
                    <div class="btn-group">
                        <button onclick="window.location.href='/ADMIN/DanhMuc/Create'" id="" class="btn green">
                            Thêm mới <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <div class="btn-group pull-right">
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            Tools <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="#">Print</a></li>
                            <li><a href="#">Save as PDF</a></li>
                            <li><a href="#">Export to Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="space15"></div>
                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Mã danh mục</th>
                            <th>Tên danh mục</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (DanhMuc i in Model)
                            {
                                <tr class="">
                                    <td>@i.DanhmucID</td>
                                    <td class="center">@i.Tendanhmuc</td>
                                    <td><a href="/ADMIN/DanhMuc/Edit/@i.DanhmucID">Edit</a></td>
                                    <td><a href="@Url.Action("XoaDM",new { id = i.DanhmucID})" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');" class="">Delete</a></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <!-- page end-->
</section>