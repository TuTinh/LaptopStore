@using LaptopStore.Models;
@using LaptopStore.Models.Entities;
@using LaptopStore.Models.DAO;
@model PagedList.IPagedList<LaptopStore.Models.Entities.SanPham>
@using PagedList.Mvc;
@{
    ViewBag.Title = "SanphamView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="login">
    <div class="wrap">
        <div class="rsidebar span_1_of_left">
            @{
                Html.RenderAction("Danhmuc");
            }
            @{
                Html.RenderAction("Khoanggia");
            }
        </div>
        <div class="cont span_2_of_3">
            <div class="mens-toolbar">
                <div class="sort">
                    <div class="sort-by">
                        <label>Xếp theo</label>
                        <select>
                            <option value="">
                                Phổ biến
                            </option>
                            <option value="">
                                Giá :  Từ cao đến thấp
                            </option>
                            <option value="">
                                Giá :  Từ thấp đến cao
                            </option>
                        </select>
                        <a href=""><img src="images/arrow2.gif" alt="" class="v-middle"></a>
                    </div>
                </div>
                <div class="pager">
                    <ul class="dc_pagination">
                        @Html.PagedListPager(Model, sotrang => Url.Action("SanphamView", new { page = sotrang }))
                    </ul>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
            @{ var i = 0;
                List<SanPham> list = new List<SanPham>();
                foreach (SanPham P in Model)
                {
                    list.Add(P);
                    i++;
                    if (i % 3 == 0 || i == Model.Count())
                    {
                        <div class="box1">
                            @foreach (SanPham a in list)
                            {
                                <div class="col_1_of_single1 span_1_of_single1">
                                    @{
                                        var session = (LoginModel)Session[LaptopStore.Models.Common.CommonConstant.USER_SESSION];
                                    }
                                    @if (session == null)
                                    {
                                        <a href="/Taikhoan/Login">
                                            <div class="view1 view-fifth1">
                                                <div class="top_box">
                                                    <h3 class="m_1" href="/">@a.tensanpham</h3>
                                                    <p class="m_2">@a.cpuz <br />@a.memory <br />@a.vga <br />@a.battery<br />@a.hedieuhanh</p>
                                                    <div class="grid_img">
                                                        <div class="css3"><img src="~/Content/images/Products/@a.ImgLink" alt="" /></div>
                                                        <div class="mask1">
                                                            <div class="info">Xem chi tiết</div>
                                                        </div>
                                                    </div>
                                                    <div class="price">@string.Format("{0:##,#}", @a.giabd)</div>
                                                </div>
                                            </div>
                                            <span class="rating1">
                                                <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                                                <label for="rating-input-1-5" class="rating-star1"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                                                <label for="rating-input-1-4" class="rating-star1"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                                                <label for="rating-input-1-3" class="rating-star1"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                                                <label for="rating-input-1-2" class="rating-star"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                                                <label for="rating-input-1-1" class="rating-star"></label>&nbsp;
                                                (45)
                                            </span>
                                            <ul class="list2">
                                                <li>
                                                    <img src="~/Content/images/plus.png" alt="" />
                                                    <ul class="icon1 sub-icon1 profile_img">
                                                        <li>
                                                            <a class="active-icon c1" href="#">Thêm vào giỏ </a>

                                                        </li>
                                                    </ul>
                                                </li>
                                            </ul>
                                            <div class="clear"></div>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/Sanpham/ChitietSP/@a.ID_SP">
                                            <div class="view1 view-fifth1">
                                                <div class="top_box">
                                                    <h3 class="m_1" href="/">@a.tensanpham</h3>
                                                    <p class="m_2">@a.cpuz <br />@a.memory <br />@a.vga <br />@a.battery<br />@a.hedieuhanh</p>
                                                    <div class="grid_img">
                                                        <div class="css3"><img src="~/Content/images/Products/@a.ImgLink" alt="" /></div>
                                                        <div class="mask1">
                                                            <div class="info">Xem chi tiết</div>
                                                        </div>
                                                    </div>
                                                    <div class="price">@string.Format("{0:##,#}", @a.giabd)</div>
                                                </div>
                                            </div>
                                            <span class="rating1">
                                                <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                                                <label for="rating-input-1-5" class="rating-star1"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                                                <label for="rating-input-1-4" class="rating-star1"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                                                <label for="rating-input-1-3" class="rating-star1"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                                                <label for="rating-input-1-2" class="rating-star"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                                                <label for="rating-input-1-1" class="rating-star"></label>&nbsp;
                                                (45)
                                            </span>
                                            <ul class="list2">
                                                <li>
                                                    <img src="~/Content/images/plus.png" alt="" />
                                                    <ul class="icon1 sub-icon1 profile_img">
                                                        <li>
                                                            <a class="active-icon c1" href="/Cart/AddItem?IDSanpham=@a.ID_SP&Quantity=1">Thêm vào giỏ </a>

                                                        </li>
                                                    </ul>
                                                </li>
                                            </ul>
                                            <div class="clear"></div>
                                        </a>
                                    }

                                </div>
                            }
                        </div>
                        list = new List<SanPham>();
                    }
                }
            }
        </div>

        <div class="clear"></div>
    </div>
</div>


